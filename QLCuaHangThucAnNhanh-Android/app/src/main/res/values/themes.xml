<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.QLCuaHangThucAnNhanhAndroid" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
